{
  "name": "react-ts-ks",
  "version": "1.0.0",
  "description": "React Typescript Kickstart",
  "main": "webpack.dev.conf.js",
  "author": "Gabor S. sb@seabadger.io",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build": "node_modules/.bin/webpack --config webpack.prod.conf.js",
    "build:dev": "node_modules/.bin/webpack --config webpack.dev.conf.js",
    "start": "node_modules/.bin/webpack-dev-server --config webpack.dev.conf.js --open",
    "tslint": "node_modules/.bin/tslint -c tslint.json -p tsconfig.json -t stylish"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)$": "ts-jest",
      ".(css)$": "<rootDir>/jest/cssTransform.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@types/react": "^16.4.9",
    "@types/react-dom": "^16.0.7",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.1",
    "autoprefixer": "^9.1.2",
    "awesome-typescript-loader": "^5.2.0",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.5.0",
    "mini-css-extract-plugin": "^0.4.1",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.22.1",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "typings-for-css-modules-loader": "^1.7.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  }
}
